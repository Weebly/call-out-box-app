{
  "manifest": "1",
  "version": "1.2.1",
  "elements": [
    {
      "name": "Call-Out Box",
      "path": "files",
      "version": "1.2.1",
      "settings": {
        "config": {
          "autopop": false
        },
        "properties": [
          {
            "name": "color-setting",
            "label": "Color",
            "type": "group",
            "properties": [
              {
                "name": "background",
                "label": "Background Color",
                "type": "color",
                "default": "#FAFAFA"
              },
              {
                "name": "border_color",
                "label": "Border Color",
                "type": "color",
                "default": "#E0E0E0"
              }
            ]
          },
          {
            "name": "style-setting",
            "label": "Style",
            "type": "group",
            "properties": [
              {
                "name": "style",
                "label": "Style",
                "type": "select",
                "default": "standard",
                "values": [
                  {
                    "name": "Standard",
                    "value": "standard"
                  },
                  {
                    "name": "Material",
                    "value": "material"
                  }
                ]
              }
            ]
          },
          {
            "name": "border-setting",
            "label": "Border",
            "type": "group",
            "properties": [
              {
                "name": "border",
                "label": "Border",
                "type": "select",
                "default": "1px solid",
                "values": [
                  {
                    "name": "None",
                    "value": "none"
                  },
                  {
                    "name": "Solid",
                    "value": "1px solid"
                  },
                  {
                    "name": "Dotted",
                    "value": "2px dotted"
                  },
                  {
                    "name": "Thick",
                    "value": "4px solid"
                  }
                ]
              }
            ]
          },
          {
            "name": "spacing-setting",
            "label": "Spacing",
            "type": "group",
            "properties": [
              {
                "name": "vertical-padding",
                "label": "Vertical Padding",
                "type": "int",
                "default": 20,
                "step": 1,
                "min": 0
              },
              {
                "name": "horizontal-padding",
                "label": "Horizontal Padding",
                "type": "int",
                "default": 20,
                "step": 1,
                "min": 0
              }
            ]
          }
        ]
      }
    }
  ]
}
